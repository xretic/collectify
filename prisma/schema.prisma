generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id       Int     @id
    token    String  @unique
    githubId String? @unique
    googleId String? @unique

    email        String  @unique
    passwordHash String?

    avatarUrl String @default("")
    bannerUrl String @default("")

    username String
    fullName String

    description String       @default("")
    collections Collection[]
    favorites   Collection[] @relation("FavoriteCollections")

    followers     Follow[] @relation("Followers")
    subscriptions Follow[] @relation("Subscriptions")

    sessions Session[]
}

model Follow {
    followerId  Int
    followingId Int

    follower  User @relation("Subscriptions", fields: [followerId], references: [id])
    following User @relation("Followers", fields: [followingId], references: [id])

    @@id([followerId, followingId])
}

model Session {
    id        String   @id
    userId    Int
    expiresAt DateTime
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model Notification {
    id              Int      @id @default(autoincrement())
    senderUserId    Int
    recipientUserId Int
    message         String
    createdAt       DateTime @default(now())
}

model Collection {
    id Int @id @unique

    name            String
    description     String @default("")
    bannerUrl       String
    category        String
    likes           Like[]
    addedToFavorite User[] @relation("FavoriteCollections")
    items           Item[]

    User   User? @relation(fields: [userId], references: [id])
    userId Int?

    createdAt DateTime @default(now())
}

model Like {
    id           Int        @id @default(autoincrement())
    userId       Int
    collectionId Int
    Collection   Collection @relation(fields: [collectionId], references: [id])
}

model Item {
    id Int @id @unique

    title       String
    description String
    tags        String[]

    Collection   Collection? @relation(fields: [collectionId], references: [id])
    collectionId Int?
}
